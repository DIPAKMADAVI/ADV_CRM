document.addEventListener('DOMContentLoaded', function() {
  var fetchDataButton = document.getElementById('fetchDataButton');
  var view_dept = document.getElementById('view_dept');

  fetchDataButton.addEventListener('click', function() {
    var recordId = 1; // Replace with the ID of the specific record you want to fetch
    var url = '/fetch_record_data/' + recordId;

    var xhr = new XMLHttpRequest();
    xhr.open('GET', url, true);
    xhr.setRequestHeader('X-Requested-With', 'XMLHttpRequest');
    xhr.onload = function() {
      if (xhr.status === 200) {
        view_dept.innerHTML = xhr.responseText;
      }
    };
    xhr.send();
  });
});